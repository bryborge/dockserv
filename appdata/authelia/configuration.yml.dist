##
# Authelia Configuration
#   Docs: https://www.authelia.com/docs/configuration/
server:
  host: 0.0.0.0
  port: 9091

theme: dark

log:
  level: warn # debug, trace, info

default_redirection_url: "https://authelia.<DOMAIN_NAME>.com"

totp:
  issuer: authelia.com
  period: 30
  skew: 1

authentication_backend:
  file:
    path: /config/users.yml
    password:
      algorithm: argon2id
      iterations: 1
      salt_length: 16
      parallelism: 8
      memory: 1024

access_control:
  default_policy: deny
  rules:
    - domain: authelia.<DOMAIN_NAME>.com
      policy: bypass
    - domain:
        - "*.<DOMAIN_NAME>.com"
        - "<DOMAIN_NAME>.com"
      policy: two_factor

session:
  name: authelia_session
  expiration: 3600 # 1 hour
  inactivity: 300 # 5 minutes
  domain: <DOMAIN_NAME>.com
  redis:
    host: redis
    port: 6379

regulation:
  max_retries: 3
  find_time: 120 # 2 minutes
  ban_time: 300 # 5 minutes

storage:
  encryption_key: AUTHELIA_STORAGE_ENCRYPTION_KEY_FILE
  postgres:
    host: postgres
    port: 5432
    database: authelia
    schema: public
    username: authelia

notifier:
  filesystem:
    filename: /config/notification.txt
